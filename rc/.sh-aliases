#!/bin/sh
# ALIASES
# single letter aliases
alias n='nvim'
alias r='rip'
alias m='mv'
alias c='cd'
alias g='git'
alias s='sudo'
alias a='sudo apt'
alias v='vi'
alias t='tldr'
alias e='exit'

# some ls aliases
alias ls='ls --color=auto --group-directories-first'
alias ll='ls -Al --group-directories-first'
alias la='ls -A --group-directories-first'
alias l='ls --group-directories-first'
w() { if [[ $# == 0 ]]; then nvim "+WorkspacesOpen wiki"; elif [[ $1 == 'g' ]]; then git -C ~/.wiki/ ${@:2}; fi}

# clear screem alias
alias cls='clear'

# info alias
alias info='info --vi-keys'

# file management alias
alias rm='rm -ri'
alias cp='cp -r'
alias mv='mv -i'
unalias md > /dev/null 2> /dev/null
md() { mkdir -p "$1"; cd "$1"; }
if exists 'fdfind' ; then
	alias fd='fdfind'
fi

# git aliases
alias gsync='git pull; git push'
alias gp='git pull'
alias gs='git status'
alias gd='git diff'
alias ga='git add -A'
alias gl='git log --graph --full-history --all --pretty'
alias gca='git pull; git add -A; git commit -m'
gcap() { git pull; git add -A; git commit -m "$1"; git push; }

# apt aliases
alias update='sudo apt update; sudo apt upgrade -y; sudo apt autoremove -y'
alias termuxupdate='pkg update -y; pkg upgrade -y'

# python aliases
alias python='python3'
alias py='python3'

# bat alias
alias bat='batcat'

# urldecode alias
alias urldecode='sed "s@+@ @g;s@%@\\\\x@g" | xargs -0 printf "%b"'

# cmus alias
alias cm='cmus'

# yt-dlp alias
alias youtube-dl='yt-dlp'

